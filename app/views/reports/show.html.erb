<p>
  <strong><%= t('.Title') %></strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= t('.Memo') %></strong>
  <%= @report.memo %>
</p>

<%= render @report.comments %>

<h2><%= t('.AddComments') %></h2>
<%= form_for( [@report, @report.comments.build] ) do |f| %>
  <p>
    <%= t('.CommentTitle') %><br />
    <%= f.text_field :commenter %>
  </p>

  <p>
    <%= t('.Body') %><br />
    <%= f.text_area :body, cols: 60, rows: 8 %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to t('.Edit'), edit_report_path(@report) %> |
<%= link_to t('.Back'), reports_path %>
